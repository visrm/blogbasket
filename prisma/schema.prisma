generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

generator zod {
  provider  = "prisma-zod-generator"
  output    = "./zod_prisma_schema"
  modelCase = "PascalCase"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Models 
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model User {
  id          String    @id @default(cuid()) @db.VarChar(100)
  username    String    @db.VarChar(30)
  displayName String    @db.VarChar(30) @default("New User")
  email       String    @unique @db.VarChar(100)
  password    String    @db.VarChar(100)
  accounts    Account[]
  sessions    Session[]
  posts       Post[]
  profile     Profile?
  role        Role      @default(USER)
  createdAt   DateTime  @default(now()) @db.Timestamp(6)
  updatedAt   DateTime  @updatedAt

  @@map("users")
}

enum Role {
  USER
  ADMIN
}

model Profile {
  id         String   @id @default(cuid()) @db.VarChar(100)
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  bio        String?
  profileImg String?  @db.VarChar(255)
  coverImg   String?  @db.VarChar(255)
  social     Social?
  createdAt  DateTime @default(now()) @db.Timestamp(6)
  updatedAt  DateTime @updatedAt
}

model Social {
  id           String  @id @default(cuid()) @db.VarChar(100)
  profileId    String  @unique
  profile      Profile @relation(fields: [profileId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  youtubeUrl   String  @default("") @db.VarChar(200)
  instagramUrl String  @default("") @db.VarChar(200)
  telegramUrl  String  @default("") @db.VarChar(200)
  linkedinUrl  String  @default("") @db.VarChar(200)
  githubUrl    String  @default("") @db.VarChar(200)
}

model Post {
  id         String    @id @default(cuid()) @db.VarChar(100)
  title      String    @db.VarChar(200)
  content    String    @db.Text
  mediaUrl   String?   @db.VarChar(255)
  published  Boolean   @default(false)
  slug       String    @db.VarChar(255)
  authorId   String
  author     User      @relation(fields: [authorId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  tags       Tag[]
  categoryId String
  category   Category? @relation(fields: [categoryId], references: [id], onDelete: Cascade, onUpdate: NoAction)
  createdAt  DateTime  @default(now()) @db.Timestamp(6)
  updatedAt  DateTime  @updatedAt

  @@map("posts")
}

model Category {
  id        String   @id @default(cuid()) @db.VarChar(100)
  name      String   @db.VarChar(50)
  slug      String   @db.VarChar(100)
  posts     Post[]
  createdAt DateTime @default(now()) @db.Timestamp(6)
  updatedAt DateTime @updatedAt

  @@map("categories")
}

model Tag {
  id    String @id @default(cuid()) @db.VarChar(100)
  name  String @db.VarChar(50)
  posts Post[]
  createdAt DateTime @default(now()) @db.Timestamp(6)
  updatedAt DateTime @updatedAt

  @@map("tags")
}
