generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Models 
model User {
  id          Int      @id @default(autoincrement())
  username    String   @db.VarChar(30)
  displayName String   @db.VarChar(30)
  email       String   @unique @db.VarChar(100)
  password    String   @db.VarChar(100)
  posts       Post[]
  profile     Profile?
  createdAt   DateTime @default(now()) @db.Timestamp(6)
  updatedAt   DateTime @default(now()) @db.Timestamp(6)
}

model Profile {
  id         Int     @id @default(autoincrement())
  userId     Int     @unique
  user       User    @relation(fields: [userId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  bio        String?
  profileImg String? @db.VarChar(255)
  coverImg   String? @db.VarChar(255)
  social     Social?
}

model Social {
  id           Int     @id @default(autoincrement())
  profileId    Int     @unique
  profile      Profile @relation(fields: [profileId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  youtubeUrl   String  @default("") @db.VarChar(200)
  instagramUrl String  @default("") @db.VarChar(200)
  telegramUrl  String  @default("") @db.VarChar(200)
  linkedinUrl  String  @default("") @db.VarChar(200)
  githubUrl    String  @default("") @db.VarChar(200)
}

model Post {
  id         Int       @id @default(autoincrement())
  title      String    @db.VarChar(200)
  content    String    @db.Text
  mediaUrl   String?   @db.VarChar(255)
  published  Boolean   @default(false)
  slug       String    @db.VarChar(255)
  authorId   Int
  author     User      @relation(fields: [authorId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  tags       Tag[]
  categoryId Int
  Category   Category? @relation(fields: [categoryId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  createdAt  DateTime  @default(now()) @db.Timestamp(6)
  updatedAt  DateTime  @default(now()) @db.Timestamp(6)
}

model Category {
  id    Int    @id @default(autoincrement())
  name  String @db.VarChar(50)
  slug  String @db.VarChar(100)
  posts Post[]
}

model Tag {
  id    Int    @id @default(autoincrement())
  name  String @db.VarChar(50)
  posts Post[]
}
